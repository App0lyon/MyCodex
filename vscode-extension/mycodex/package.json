{
  "activationEvents": [
    "onStartupFinished",
    "onCommand:mycodex.openChat",
    "onCommand:mycodex.askSelection",
    "onView:mycodex.chatView"
  ],
  "categories": [
    "Other"
  ],
  "contributes": {
    "commands": [
      {
        "command": "mycodex.openChat",
        "title": "MyCodex: Ouvrir le chat"
      },
      {
        "command": "mycodex.askSelection",
        "title": "MyCodex: Envoyer la sélection"
      }
    ],
    "configuration": {
      "properties": {
        "mycodex.apiBaseUrl": {
          "default": "http://localhost:5000/api/run",
          "description": "URL de l'API HTTP de l'agent (POST).",
          "type": "string"
        },
        "mycodex.cliCommand": {
          "default": "python main.py --goal \"{query}\" --context \"{context}\" --constraints \"\" --no-verbose",
          "description": "Commande CLI pour invoquer l'agent. Les placeholders {query} et {context} seront remplacés. Par defaut, vise agent/main.py et coupe le verbose.",
          "type": "string"
        },
        "mycodex.cliCwd": {
          "default": "",
          "description": "Répertoire de travail pour la commande CLI (vide = détection auto : agent/main.py puis workspace).",
          "type": "string"
        },
        "mycodex.contextMaxLines": {
          "default": 40,
          "description": "Nombre maximum de lignes d'environnement envoyées avec la sélection.",
          "type": "number"
        },
        "mycodex.transport": {
          "default": "http",
          "description": "Mode de communication avec l'agent (HTTP recommande, CLI en secours).",
          "enum": [
            "http",
            "cli"
          ],
          "type": "string"
        }
      },
      "title": "MyCodex"
    },
    "views": {
      "mycodex": [
        {
          "id": "mycodex.chatView",
          "name": "MyCodex Chat",
          "type": "webview"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "icon": "media/icon.svg",
          "id": "mycodex",
          "title": "MyCodex"
        }
      ]
    }
  },
  "description": "Homemade codex",
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.107.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.27.1",
    "eslint": "^9.39.1",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.1"
  },
  "displayName": "MyCodex",
  "engines": {
    "vscode": "^1.107.0"
  },
  "main": "./dist/extension.js",
  "name": "mycodex",
  "scripts": {
    "check-types": "tsc --noEmit",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "compile-tests": "tsc -p . --outDir out",
    "lint": "eslint src",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "test": "vscode-test",
    "vscode:prepublish": "npm run package",
    "watch": "npm-run-all -p watch:*",
    "watch-tests": "tsc -p . -w --outDir out",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json"
  },
  "version": "0.0.1"
}
